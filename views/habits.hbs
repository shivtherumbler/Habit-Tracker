<!-- views/habits.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Habit Tracker - Habits</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">

        <h1>Your Habits</h1>
        <ul class="list-group">
            {{#each habits}}
                <li class="list-group-item">
                    <h5>{{this.name}}</h5>
                    <p>{{this.description}}</p>
                    <p><strong>Frequency:</strong> {{this.frequency}}</p>
                    <p><strong>Notifications:</strong> {{this.notifications}}</p>
                    <p><strong>Goals:</strong> {{this.goals}}</p>
                    <p><strong>Notes:</strong> {{this.notes}}</p>

                    <a href="/habits/{{this._id}}/edit" class="btn btn-warning btn-sm">Edit</a>
                    
                    <form action="/habits/{{this._id}}/delete" method="POST" style="display: inline-block;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </li>
            {{/each}}
        </ul>
        <a href="/habits/add" class="btn btn-primary my-3">Add New Habit</a>

        <!-- Back Button to Home Page -->
        <br><a href="/" class="btn btn-secondary mb-3">Back to Home</a>
    </div>
</body>
</html>
